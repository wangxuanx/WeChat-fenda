.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 30rpx;
    border-radius: 50%;
    box-shadow: 0px 0px 5px #767676;
}

.userinfo-nickname {
    font-size: 30rpx;
    margin: 0rpx 20rpx 40rpx;
    color: #300e0e;
}

.profile-wrapper, .account-wrapper {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.profile, .account {
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
    flex: 1;
    font-size: 24rpx;
}

.profile-arrow, .account-arrow {
    width: 32rpx;
    height: 32rpx;
}

.btn-quit {
    margin: 15rpx;
}
