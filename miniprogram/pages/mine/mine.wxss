.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 30rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 30rpx;
    margin-bottom: 20rpx;
    color: #300e0e;
}

.operation{
    display: flex;
    width: 650rpx;
    height: 150rpx;
    box-shadow: 0px 0px 10px #ccc;
    margin-bottom: 20rpx;
    margin-top: 15rpx;
    border-radius: 10px;
}

.cu-item{
   align-items: center;
   display: flex;
   flex-direction: column;
}
.operation-image{
    margin-top: 15rpx;
    width: 79rpx;
    height: 79rpx;
}

.operation-name{
    font-size: 25rpx;
    margin: 15rpx;
}

.home_grid{
    padding: 20px 10px;
}

.profile-wrapper, .account-wrapper {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.profile, .account {
    display: flex;
    padding: 30rpx;
    align-items: center;
    flex-direction: row;
    border-bottom: 1rpx solid #f0f0f0;
}

.profile-item, .account-item {
    flex: 1;
    font-size: 24rpx;
}

.profile-arrow, .account-arrow {
    width: 32rpx;
    height: 32rpx;
}

.btn-quit {   
    width: 80%;
    margin-left: 10%;
    margin-bottom: 20rpx;
    border-radius: 98px;
    box-shadow: 0px 0px 5px #ccc;
}
