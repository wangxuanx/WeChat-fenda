<!--miniprogram/pages/edit/edit.wxml-->
<view class="edit-content">
  <textarea rows="20" cols="20" class="content" placeholder="请输入正文">{{text}}</textarea>
</view>
<view class="submit-btn">
  <button class="cu-btn bg-blue btn-color margin-tb-sm lg" catchtap="toSubmit">提交</button>
</view>
<view class="imageArea"  bindtap="upLoadImages">
  <view>
    <text wx:if="{{images.length==0}}" class="text-style">上传图片(可选)</text>
    <block wx:for="{{images}}" wx:key="*this" class="q-image-wrap">
      <view>
        <image src="{{item}}" class="q-image" mode="scaleToFill" data-idx="{{index}}"></image>
      </view>
    </block>
  </view>
</view>
