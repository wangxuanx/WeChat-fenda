/**feeds.wxss**/

.padding-top {
  z-index: 100;
  font-size: 25rpx;
}

.date-style {
  padding-top: 15rpx;
}

.btnRight {
  margin-right: 3%;
}

.cu-card>.cu-item {
  margin-left: 0rpx;
  margin-right: 0rpx; 
  margin-bottom: 0;
  margin-top: 0rpx;
  border-bottom: 1rpx solid #ddd;
}

.addAction {
  position: fixed;
  right: 3%;
  top: 85%;
  opacity: 1;
  z-index: 555;
  border-radius: 120px;
  background-color: #fff;
  height: 50px;
  width: 50px;
  box-shadow: 0px 0px 5px #ccc;
}

.bg-color {
  color: #81d4fa;
  font-size: 50px;
  left: 0px;
  top: 0px;
}

.hover {
  align-items: center;
  color: #81d4ff;
}

.img-plus{
  height: 50px;
  width: 50px;
}

.chover{
  width: 50px;
  height: 50px;
}

.turnRed {
  color: red;
}

.output-audio { 
  width: 180rpx; 
  margin-top: 20rpx;
  margin-left: 30rpx;
  margin-bottom: -10rpx;
}
.output-audio .audio{  
  color: #fff;
  padding: 20rpx; border-radius: 10rpx;background-color: #eee;
  border: 1px solid #f0f0f0; overflow: hidden; 
}
.output-audio .audio .ico{
  color: #fff;
   width: 26rpx; height: 30rpx; float: left; 
}
.loading-wrap {
  display: flex;
  justify-content: center;
}
.loading{
  text-align: center;
  height: 60rpx;
  width: 240rpx;
}

.comments {
  margin-left: 30rpx;
  margin-right: 66rpx;
  margin-bottom: 30rpx;
  background-color: #eee;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.comment {
  padding-left: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  letter-spacing: 3rpx;
}

.blue-font {
  color: #1e99e5;
}

.comment-header .cu-item {
  background-color: #eee;
  border-bottom: 1rpx solid #ccc;
}

.comment-title {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-right: 20rpx;
  font-size: 30rpx;
}

.comment-icon {
  float: right;
  padding-top: 20rpx;
}
.bgGray {
  background-color: #eee;
  border: 1rpx solid #ccc;
  min-height: 80rpx;
  border-radius: 10rpx;
}

.translateXY {
  transform: rotate(180deg);
}

.commentfolded {
  height: 0;
  overflow: hidden;
}

.padding-top {
  padding-top: 5%;
}

.commentunfolded {
  height: auto;
}

.comment-style {
  font-size: 30rpx;
  letter-spacing: 3rpx;
  margin-top: 10rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
}

.cu-bar.input {
  background-color: transparent;
  border: 1rpx solid #eee;
  border-radius: 4rpx;
}

.cu-bar.input input {
  border: 1rpx solid #eee;
}

